<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#4183FF"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_tixing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    android:background="@drawable/a_btn_news" />

                <ImageView
                    android:id="@+id/iv_tongzhi_tishi"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-3dp"
                    android:background="@drawable/a_icon_xianshi"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shezhi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    android:background="@drawable/a_btn_set" />

                <ImageView
                    android:id="@+id/iv_shezhi_tishi"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-3dp"
                    android:background="@drawable/a_icon_xianshi"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.bjxiyang.zhinengshequ.myapplication.view.CircleImageView
                android:id="@+id/gerenxinxi_touxiang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/a_icon_headportrait" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/gerenxinxi_touxiang"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_people"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="未登陆"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/gerenxinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="个人信息"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/a_btn_jinru" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:text="我的订单" />

        <LinearLayout
            android:id="@+id/youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_toRightOf="@+id/dingdan"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_youhuiquancount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="0"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="优惠券"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#dddddd"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/daifukuan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:background="@drawable/a_icon_paymentonbehalfof" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="待付款"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/my_daifukuan_tishi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-51dp"
                android:background="@drawable/a_icon_dian"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/daifahuo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:background="@drawable/a_icon_deliveryonbehalfof" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="待发货"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/my_daifahuo_tishi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-51dp"
                android:background="@drawable/a_icon_dian"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/daishouhuo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:background="@drawable/a_icon_goodstobereceived" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="待收货"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/my_daishouhuo_tishi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-51dp"
                android:background="@drawable/a_icon_dian"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tuikuantuihuo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:background="@drawable/a_icon_refund" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="退款"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/my_tuikuantuihuo_tishi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-51dp"
                android:background="@drawable/a_icon_dian"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quanbudingdan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:background="@drawable/a_icon_whole" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="全部订单"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/my_alldingdan_tishi"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="-51dp"
                android:background="@drawable/a_icon_dian"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"

        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/tv_gouwuche"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="购物车"
        android:textColor="#323232" />

    <ImageButton
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/f_btn_jinru" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"></View>

    <RelativeLayout
        android:id="@+id/wodedizhi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:layout_marginLeft="15dp"
            android:textColor="#323232"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />
        <ImageButton
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/f_btn_jinru"
            android:id="@+id/imageButton" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:id="@+id/mydate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="我发起的约游"
        android:textColor="#323232" />

    <ImageButton
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/f_btn_jinru" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"></View>

    <RelativeLayout
        android:id="@+id/lianxikefu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="#323232" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="(400-0080-828)"
    android:layout_alignParentRight="true"
    />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"></View>

    <RelativeLayout
        android:id="@+id/yijianfankui"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="意见反馈"
           android:layout_centerVertical="true"
            android:textColor="#323232" />
        <ImageButton
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/f_btn_jinru" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"></View>

    <RelativeLayout
        android:id="@+id/ll_gerenxinxi_xiugai_menjinrenzhenge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="门禁认证"
            android:textColor="#323232" />

        <TextView
            android:id="@+id/tv_gerenxinxi_xiugai_menjinrenzhenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#2e77ff" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd">

    </View>

</LinearLayout>





