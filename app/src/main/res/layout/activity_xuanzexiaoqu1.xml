<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:background="#4183FF"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183ff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_xuanzexiaoqu1_cance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lv_fanhui"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/tv_xuanzexiaoqu1_cance"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/b_btn_padlock" />
            </LinearLayout>

 

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:text="选择小区"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_xuanzexiaoqu1_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">

            <TextView
                android:id="@+id/tv_xuanzexiaoqu1_add"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/b_icon_add"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:background="@drawable/b_icon_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位社区"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv_dingweidizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位小区地址"
            android:textColor="#333333"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_dingweiname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/tv_dingweiyezhu"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业主" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88888888"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:background="@drawable/a_icon_rests" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他社区"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">
        <ListView
            android:id="@+id/lv_qitashequ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_qitashequ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未添加其他社区" 
            android:textColor="#333333"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#888888" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业主" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88888888"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="30dp"></View>

</LinearLayout>
